{
    "compilerOptions": {
        "target": "ES5",
        "lib": ["ES6", "DOM"],
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "assets", "spec", "build"]
}
